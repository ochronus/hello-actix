# EditorConfig helps maintain consistent coding styles between different editors and IDEs
# Docs: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Rust follows 4-space indentation by convention
[*.rs]
indent_size = 4

# Common text/data files use 2 spaces
[*.{toml,json,yml,yaml,md}]
indent_size = 2

# Keep two trailing spaces in Markdown to preserve soft line breaks
[*.md]
trim_trailing_whitespace = false

# Makefiles require tabs
[Makefile]
indent_style = tab
tab_width = 4

# Shell scripts (bash/sh)
[*.sh]
indent_size = 2
